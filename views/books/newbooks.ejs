<%- include('../partials/header') %>

<h1>Add a New Book</h1>

<% if (errorMessage) { %>
    <p style="color: red;"><%= errorMessage %></p>
<% } %>

<form action="/books" method="POST" enctype="multipart/form-data">
    <div>
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="<%= book ? book.title : '' %>" required>
    </div>

    <div>
        <label for="description">Description:</label>
        <textarea id="description" name="description" required><%= book ? book.description : '' %></textarea>
    </div>

    <div>
        <label for="publishedDate">Published Date:</label>
        <input type="date" id="publishedDate" name="publishedDate" value="<%= book ? book.publishedDate : '' %>" required>
    </div>

    <div>
        <label for="pageCount">Page Count:</label>
        <input type="number" id="pageCount" name="pageCount" value="<%= book ? book.pageCount : '' %>" required>
    </div>
    <label for="coverImage">Cover Image:</label>
        <input type="file" name="coverImage" >
    <div>
    
    </div>

    <div>
        <label for="author">Author:</label>
        <select id="author" name="author" required>
            <option value="" disabled selected>Select an Author</option>
            <% authors.forEach(author => { %>
                <option value="<%= author._id %>" 
                        <%= book && book.author && book.author.equals(author._id) ? 'selected' : '' %>>
                    <%= author.name %>
                </option>
            <% }); %>
        </select>
    </div>

    <div>
        <button type="submit">Add book</button>
    </div>
</form>
