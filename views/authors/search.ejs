<%- include('../partials/header') %> 
<h2>SEARCH AUTHORS</h2>
<form action="/authors" method="GET">
  <label>Name</label>
  <input type="text" name="name" value="<%= searchOption %>"> 
  <button type="submit">Search</button>
</form>
<br>

<h3>Authors List:</h3>
<ul>
  <% if (authors.length > 0) { %>
    <% authors.forEach(author => { %>
      <li><%= author.name %></li>
    <% }) %>
  <% } else { %>
    <p>No authors found.</p>
  <% } %>
</ul>



