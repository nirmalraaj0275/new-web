<%- include('../partials/header') %>

<h2>Authors List</h2>

<ul>
  <% if (authors.length > 0) { %>
    <% authors.forEach(author => { %>
      <li><%= author.name %></li>
    <% }) %>
  <% } else { %>
    <p>No authors found.</p>
  <% } %>
</ul>

